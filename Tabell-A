<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8" />
  <title>Grupp A Tabell</title>
  <link href="https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/5.3.2/papaparse.min.js"></script>
  <style>
    body {
      margin: 0;
      background-color: #000;
      color: white;
      font-family: 'Teko', sans-serif;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 50px;
    }
    table {
      border-collapse: collapse;
      width: 90%;
    }
    th, td {
      border: 1px solid #fff;
      padding: 8px 12px;
      text-align: center;
      font-size: 28px;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.8);
    }
    th {
      background-color: #222;
    }
    tr:nth-child(even) td {
      background-color: rgba(255,255,255,0.05);
    }
  </style>
</head>
<body>
  <table id="table-container">
    <thead>
      <tr>
        <th>Lag</th><th>MS</th><th>V</th><th>OTV</th><th>OTF</th><th>F</th><th>Poäng</th><th>Rundskillnad</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const SHEET_ID = '1GByjCuMMZSxk9EyvJ3ImA385UGYiKyl4oZgeEJq-XAA';
    const BASE = `https://docs.google.com/spreadsheets/d/${SHEET_ID}/gviz/tq?tqx=out:csv&sheet=Tabeller`;

    Papa.parse(BASE, {
      download: true,
      header: true,
      complete: function(results) {
        const tbody = document.querySelector('#table-container tbody');
        tbody.innerHTML = ''; // rensa

        results.data.forEach(row => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${row['Lag']}</td>
            <td>${row['MS']}</td>
            <td>${row['V']}</td>
            <td>${row['OTV']}</td>
            <td>${row['OTF']}</td>
            <td>${row['F']}</td>
            <td>${row['Poäng']}</td>
            <td>${row['Rundskillnad']}</td>
          `;
          tbody.appendChild(tr);
        });
      }
    });
  </script>
</body>
</html>
